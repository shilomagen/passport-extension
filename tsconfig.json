{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "dist/js",
    "strict": true,
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}
